<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= pageTitle %> </title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('../includes/styles.ejs') %>

        <style type="text/css">
            body>
            .column {
                max-width: 650px;
            }

            .ui.label {
                width: 100px;
            }

            .ui.labeled.input {
                height: 40px;
            }
        </style>

</head>

<body>
    <%- include('../includes/navbar.ejs') %>

        <div class="ui middle aligned center aligned grid" style="height:50%;width:650px;margin:auto">
            <div class=" column">

                <h2 class="ui image header">
                    <div class="content">
                        <% if(edit) { %> Edit Genre <% } else { %> Add Genre <% } %>
                    </div>
                </h2>

                <form class="ui form" action="<% if(edit) { %>/admin/edit-genre<% } else { %>/admin/add-genre<% } %>?_csrf=<%= csrfToken %>" enctype='multipart/form-data' method="post">
                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                Name
                            </div>
                            <input type="text" name="name" placeholder="Genre Name" value="<% if (edit) { %><%= genre.name %><% } %>">
                        </div>
                    </div>

                    <div class="field">
                        <div class="ui labeled input" style="height: 100px;">
                            <div class="ui label">
                                Description
                            </div>
                            <textarea type="text" rows="4" name="description" placeholder="Description"><% if (edit) { %><%= genre.description %><% } %></textarea>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                    <% if (edit) { %>
                    <input type="hidden" name="id" value="<%= genre.id %>">
                    <% } %>
                    <button class="ui button" type="submit"><% if(edit) { %> Edit Genre <% } else { %> Add Genre <% } %></button>
                </form>

            </div>
        </div>



</body>

</html>