<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= pageTitle %> </title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('../includes/styles.ejs') %>

        <style type="text/css">
            body>.grid {
                height: 80%;
            }

            .column {
                max-width: 650px;
            }

            .ui.label {
                width: 100px;
            }

            .ui.labeled.input {
                height: 40px;
            }
        </style>

</head>

<body>
    <%- include('../includes/navbar.ejs') %>

        <div class="ui middle aligned center aligned grid">
            <div class=" column">

                <h2 class="ui image header">
                    <div class="content">
                        Add genre
                    </div>
                </h2>

                <form class="ui form" action="/admin/add-genre?_csrf=<%= csrfToken %>" enctype='multipart/form-data' method="post">
                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                Name
                            </div>
                            <input type="text" name="name" placeholder="">
                        </div>
                    </div>

                    <div class="field">
                        <div class="ui labeled input" style="height: 100px;">
                            <div class="ui label">
                                Description
                            </div>
                            <textarea type="text" rows="4" name="description" placeholder="Description"></textarea>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

                    <button class="ui button" type="submit">Add genre</button>
                </form>

            </div>
        </div>



</body>

</html>