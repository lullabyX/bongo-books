<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= pageTitle %>
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%- include('../includes/styles.ejs') %>

        <style>
            body>

            .ui.stacked.segments:after {
                position: relative;
            }

            .ui.stacked.segment:after {
                position: relative;
            }

            .ui.message {
                display: block;
            }

            .ui.fluid.large.teal.button:hover + .ui.message {
                display: block;

            }
            .column {
                max-width: 450px;
            }
        </style>


</head>

<body>

    <%- include('../includes/navbar.ejs') %>

        <div class="ui middle aligned center aligned grid" style="height:50%">
            <div class="column" style="max-width: 450px;">
                <h2 class="ui teal image header">
                    <div class="content">
                        Login to your account
                    </div>

                </h2>
                <form class="ui large form" action="/auth/login" method="post">
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input type="text" name="email" placeholder="E-mail address">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                        <button class="ui fluid large teal button" type="submit">Login</button>
                    </div>

                    <div class="ui error message"></div>

                </form>

                <div class="ui message">
                    <a href="/auth/signup">Sign Up</a> | <a href="/auth/reset">Forgot password</a>
                </div>
            </div>
        </div>

</body>

</html>