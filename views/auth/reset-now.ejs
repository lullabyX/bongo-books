<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= pageTitle %>
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%- include('../includes/styles.ejs') %>

        <style>
            body>

            .ui.stacked.segments:after {
                position: relative;
            }

            .ui.stacked.segment:after {
                position: relative;
            }

            .ui.message {
                display: block;
            }

            .ui.fluid.large.teal.button:hover + .ui.message {
                display: block;

            }
            .column {
                max-width: 450px;
            }
        </style>


</head>

<body>

    <%- include('../includes/navbar.ejs') %>

    <div class="ui middle aligned center aligned grid" style="margin-top:5px;">
        <div class="column" style="width: 750px;">
            <div class="ui secondary inverted green segment" style="width: 100%;">
                Token Verified!
            </div>
        </div>
    </div>
        <div class="ui middle aligned center aligned grid" style="height:40%">
            <div class="column" style="max-width: 450px;">
                <h2 class="ui teal image header">
                    <div class="content">
                        Reset your password
                    </div>

                </h2>
                <form class="ui large form" action="/auth/reset-now" method="post">
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="newPassword" placeholder="New password">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="confirmNewPassword" placeholder="Confirm new password">
                            </div>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                        <input type="hidden" name="token" value="<%= token %>" >
                        <button class="ui fluid large teal button" type="submit">Reset Password</button>
                    </div>

                    <div class="ui error message"></div>

                </form>

                <div class="ui message">
                    <a href="/auth/login">Login</a> | <a href="/auth/signup">Sign Up</a>
                </div>
            </div>
        </div>

</body>

</html>