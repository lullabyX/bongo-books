<main>
  <% if (genres.length> 0) { %>

  <div class="ui middle aligned center aligned grid" style="margin-top: 20px;margin:auto">
    <div class="column" style="max-width: 1100px; margin: auto">
      <div class="ui four cards" style="margin: auto">
        <% for (let genre of genres) { %>

        <a style="margin: auto" href="/books/genre?id=<%= genre.id %> ">
          <div
            class="card"
            style="
              width: 250px;
              max-height: 450px;
              margin: auto;
              margin-bottom: 20px;
            "
            id="card_<%= genre.id %>"
          >

            <div
              class="content"
              style="align-items: center; text-align: center"
            >
              <div class="header">
                <a href="/books/genre?id=<%= genre.id %> ">
                  <%= genre.name %>
                </a>
              </div>
            </div>

            <% if (isAdmin) { %>
            <div class="extra">
              <div class="ui basic green button">
                <a href="/admin/edit-genre/<%= genre.id %>?edit=true"> Edit </a>
              </div>
            </div>

            <% } %>
          </div>
        </a>
        <% } %>
      </div>
    </div>
  </div>

  <% } else { %>
  <h1>No Genres Found!</h1>
  <% } %>
</main>
