<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= pageTitle %>
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('../includes/styles.ejs') %>

        <style type="text/css">
            body>
            
            .column {
                max-width: 650px;
            }

            .ui.label {
                width: 100px;
            }

            .ui.labeled.input {
                height: 40px;
            }
        </style>
</head>

<body>
    <%- include('../includes/navbar.ejs') %>

        <div class="ui middle aligned center aligned grid" style="margin-top: 5px;">
            <div class="column">

                <h2 class="ui image header">
                    <div class="content">
                        Add book
                    </div>
                </h2>

                <form class="ui form" action="/user/add-book?_csrf=<%= csrfToken %>" enctype='multipart/form-data' method="post">
                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                Title
                            </div>
                            <input type="text" name="title" placeholder="Title">
                        </div>
                    </div>

                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                Cover Page
                            </div>
                            <input type="file" name="multi-files" multiple accept="image/*">

                        </div>
                    </div>

                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                Price
                            </div>

                            <input type="text" name="price" placeholder="Price">
                        </div>
                    </div>

                    <div class="field">
                        <div class="ui labeled input">
                            <div class="ui label">
                                ISBN
                            </div>

                            <input type="text" name="ISBN" placeholder="ISBN">
                        </div>
                    </div>

                    <button class="ui button" type="submit">Add book</button>
                </form>

            </div>
        </div>

</body>

</html>